{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",

    "rootDir": "src",
    "outDir": "dist",

    "moduleResolution": "node",
    "types": ["node"],
    "lib": ["ES2020"],

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "strict": false,
    "noImplicitAny": false,

    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "prisma", "scripts"]
}
