{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",

    "rootDir": "src",
    "outDir": "dist",

    "moduleResolution": "node",

    "lib": ["ES2020"],
    "types": ["node", "express"],
    "typeRoots": ["./src/types", "./node_modules/@types"],

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "strict": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "generated", "prisma", "scripts"]
}
